{
    "id": "inf-build-avg-job-duration",
    "title": "Avg. Duration of a job per day",
    "service": "elasticsearch",
    "query": {
        "index": "{{index:nuage_build}}",
        "type": "{{type:nuage_doc_type}}",
        "body": {
            "size": 0,
            "query": {
                "bool": {
                    "must": [
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-7d}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term":{
                                "job":  "{{job}}"
                            }
                        }
                    ]
                }
            },
                    "aggs": {
                        "duration": {
                          "avg": {
                              "field": "duration",
                              "missing":0
                          }
                        }
                    }
                }
            }
        }
    
