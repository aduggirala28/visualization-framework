{
  "id": "vss-domain-traffic-topx-pg",
  "title": "Top {{direction:Source}} PG by Count",
  "service": "elasticsearch",
  "query": {
    "index": "{{index:nuage_flow}}",
    "type": "{{type:nuage_doc_type}}",
    "body": {
      "size": 0,
      "query": {
        "bool": {
          "must": [
            {
              "range": {
                "timestamp": {
                  "gte": "{{startTime:now-24h}}",
                  "lte": "{{endTime:now}}",
                  "format": "epoch_millis"
                }
              }
            },
            {
              "term": {
                "nuage_metadata.enterpriseName": "{{enterpriseName:chord_enterprise}}"
              }
            },
            {
              "term": {
                "{{domainType:nuage_metadata.domainName}}": "{{domainName:chord_domain}}"
              }
            }
          ]
        }
      },
      "aggs": {
        "pg": {
          "terms": {
            "field": "nuage_metadata.{{pgname_field:spgName}}",
            "size": "50",
            "order": {
              "SumOf": "desc"
            }
          },
          "aggs": {
            "SumOf": {
              "sum": {
                "field": "packets"
              }
            }
          }
        }
      }
    }
  }
}