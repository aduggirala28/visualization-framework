{
    "id": "inf-build-agent-build-linegraph",
    "title": "Total Builds of an agent per day during the last week",
    "service": "elasticsearch",
    "query": {
        "index": "{{index:nuage_build}}",
        "type": "{{type:nuage_doc_type}}",
        "body": {
            "size": 0,
            "query": {
                "bool": {
                    "must": [
                        {
                            "range":{
                                "timestamp":{
                                    "gte":"{{startTime:now-7d}}",
                                    "lte":"{{endTime:now}}",
                                    "format":"epoch_millis"
                                }
                            }
                        },
                        {
                            "term":{
                                "agent":  "{{agent}}"
                            }
                        }
                    ]
                }
            },
            "aggs": {
                "ts": {
                    "date_histogram": {
                        "field": "timestamp",
                        "interval": "1d",
                        "extended_bounds":{
                            "min":"{{startTime:now-7d}}",
                            "max":"{{endTime:now}}"
                        }
                    }
                }
            }
        }
    }
}